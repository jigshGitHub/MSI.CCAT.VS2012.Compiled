@model MSI.CCAT.WEB.Models.LogOnModel

@{
    ViewBag.Title = "Mined System Compliance Tracking Tool";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userCanRegister = false; 
    var enableLostPassword = false;
}

<script src="~/contents/_shared/script/jquery.validate.min.js")" type="text/javascript"></script>
<script src="~/contents/_shared/script/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="row-fluid" style="margin-top:10px; padding-top:35px; padding-bottom:25px; text-align:center; background-color:rgba(0,0,0,.5);" >
     <span class="HeaderText">Mined System Compliance Tracking Tool</span>
</div>


<div class="container-fluid">
    @*///// LogOn Form ///////////////////////////////////////////////////////////////////*@                                                                                                                                                
    <div class="span4 hero-unit" style="background-color:rgba(0,0,0,.5);padding:15px;margin-top:45px;">
                <div class="hero-unit" style="background-color:white; opacity:0.9;padding:15px;margin:0px;">

                    <div class="page-title">Log <span>in</span></div>

                    @using (Html.BeginForm(new {@class = "form-inline"})) {                                                                                                
                        <fieldset class="control-group">
                            <ol class="unstyled">
                                <li>
                                    @*Html.LabelFor(m => m.UserName)*@
                                    @Html.TextBoxFor(m => m.UserName, new { @class="input-large", style="height:28px; width:95%", placeholder="User Name or Email" }) 
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </li>
                                <li>
                                    @*Html.LabelFor(m => m.Password)*@
                                    @Html.PasswordFor(m => m.Password, new { @class = "input-large", style="height:28px; width:95%", placeholder = "Password" }) 
                                    @Html.ValidationMessageFor(m => m.Password)
                                </li>
                
                                <li style="text-align:right">
                                    @*@Html.CheckBoxFor(m => m.RememberMe)  <span class="smallline">Remember me</span>*@
                                    <button class="btn btn-primary" type="submit"><i class="icon-off icon-white"></i>  Log In</button>
                                </li>
                            </ol>
                        </fieldset>
                    }

                    @Html.ValidationSummary(false, "Login was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-error" })
        
                    @if(userCanRegister) { @Html.ActionLink("Register if you don't have an account.", "Register", "Account")} 
                    @if(enableLostPassword) { @Html.ActionLink("Lost your Password?", "RequestLostPassword", "Account") }

                </div>
            </div>

</div>

@*///// Hide "LogOn" button at NavBar //////////////////////////////////////////////*@
<script>
    $(document).ready(function () {
        $("#btn_logonButton").hide();
    });
</script>

