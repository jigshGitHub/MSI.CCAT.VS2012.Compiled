@model MSI.CCAT.WEB.Models.LogOnModel

@{
    ViewBag.Title = "CFPB and Compliance Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
        
}

<script src="~/contents/_shared/script/jquery.validate.min.js")" type="text/javascript"></script>
<script src="~/contents/_shared/script/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div class="row-fluid" style="margin-top:8px; background-color: #C6D9F1;">

    <div class="container-fluid span6">
        <label>&nbsp;</label>
        <label style="text-align:left;" class="HeaderText">CFPB and Compliance Management<sup style="font-weight:normal; font-size:0.6em">TM</sup></label>
    </div>

    <div class="container-fluid pull-right span6">
    @using (Html.BeginForm(new { @class = "form-inline" }))
    {    
        <table class="pull-right">
            <tr>
                <td style="text-align:left;">
                    <label>Username:</label>
                    @Html.TextBoxFor(m => m.UserName, new { placeholder="Username" }) 
                 </td>
                <td>&nbsp;</td>
                <td style="text-align:left">
                    <label>Password:</label>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password" }) 
                                        
                </td>
                <td>&nbsp;</td>
                <td style="vertical-align:top" >
                    <label>&nbsp;</label>
                    <button class="btn btn-primary" type="submit"><i class="icon-off icon-white"></i>Log In</button>
                </td>
            </tr>
              <tr>
            <td colspan="5">@Html.ValidationSummary(false, "", new { @class = "alert alert-error" })
            </td>
        </tr>
        </table>                                                                                            
                        
    }
      
    </div>

</div>

<div class="container-fluid">
    <div class="row-fluid">
         <div style="text-align:center;">
               <img src="~/Images/bg-capitol.png" style="position:relative;display:block;width:100%; height:90%;max-width:1450px;margin:0 auto; padding-top:15px;"/> 
         </div>
    </div>
</div>

@*///// Hide "LogOn" button at NavBar //////////////////////////////////////////////*@
<script>
    $(document).ready(function () {
        $("#btn_logonButton").hide();

        @*Make autocomplete off for the Textboxes*@
        try {
            $("input[type='text']").each(function () {
                $(this).attr("autocomplete", "off");
            });
        }
        catch (e)
        { }

    });
</script>

