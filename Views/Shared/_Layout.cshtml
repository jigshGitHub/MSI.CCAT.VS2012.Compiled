<!DOCTYPE html>
<html lang="en">

@{Html.RenderPartial("~/Views/Shared/_LayoutHeader.cshtml");}

<body @(!Request.IsAuthenticated ? string.Format("class=logon style=background-image:url(../Images/bg-capitol.png);") : "")>

    @*///// Logo/Brand /////////////////*@
    <div id="header" style="height:55px;">
        <a href="/#">
            <img src="~/Images/msi_small.png" style="max-width: 160px; max-height:60px; margin-top:20px;" /> 
        </a>
	</div>

    @*///// User Navivation Bar /////////////////////////////////////////////////////////////////*@
	<div id="user-nav" class="navbar navbar-inverse">
        <ul class="nav btn-group">
            @if (Request.IsAuthenticated)
            {
                <li class="btn btn-inverse">@Html.ActionLink(User.Identity.Name, "ChangePassword", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Change password" })</li>
        
                <li class="btn btn-inverse" ><a title="" href="#"><i class="icon icon-user" style="background:none;"></i> <span class="text">Account</span></a></li>            
                
                <li class="btn btn-inverse"><a title="" href="/Account/LogOff"><i class="icon icon-share-alt" style="background:none;"></i> <span class="text">Logout</span></a></li>
            }
        </ul>
    </div>

    @*This is for notification message*@
    <div id="loading" style="display: none;">
           &nbsp;&nbsp;&nbsp;<img src="~/contents/_shared/image/ajax-loader.gif" alt="Loader Image" />
           <br />
           <div id="innerMessage"></div>
    </div>

    @RenderBody()

    <footer class="footer bottom-bar"> 
        <div class="container" style="margin:5px;">    
            <div class="pull-left" >
                <img src="~/Images/washington.png" style="border:1px; border-radius: 4px 4px 4px 4px; max-height:100%; height:30px; width:30px" />
            </div>
            <div class="pull-left" style="margin:5px; max-width:340px;">
                <span>Mined System Compliance Tracking Tool</span> 
            </div>
            <div class="pull-right" style="margin:5px; text-align:right;">
                <span class="poweredby">Powered by <a href="http://www.minedsystems.com" target="_blank">Mined Systems Inc.</a></span> 
                <span class="copyright">&#169; 2013.</span>
            </div>
        </div>               
    </footer>
</body>
</html>
